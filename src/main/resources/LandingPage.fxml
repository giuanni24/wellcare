<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700" prefWidth="1080" spacing="30"
      style="-fx-background-color: #C8D8E4;" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="maindir.view.gui.LoginGUIController">

    <padding>
        <Insets top="40" />
    </padding>

    <HBox alignment="CENTER" spacing="20" prefWidth="1080" >
        <Label text="WellCare Center" style="-fx-font-size: 60; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="60" />
            </font>
        </Label>
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
            <Image url="@shield-icon.png" />
        </ImageView>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="btnLogin" text="LOGIN"
                style="-fx-background-color: #5A8CAE; -fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 15 50;"
                onAction="#showLogin" />
        <Button fx:id="btnRegistrazione" text="REGISTRAZIONE"
                style="-fx-background-color: #5A8CAE; -fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 15 50;"
                onAction="#showRegistrazione" />
    </HBox>

    <VBox fx:id="formContainer" alignment="TOP_CENTER" maxWidth="600" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <TextField fx:id="txtNome" promptText="nome" visible="false" managed="false" maxWidth="Infinity"
                   style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-padding: 15;" />

        <TextField fx:id="txtCognome" promptText="cognome" visible="false" managed="false" maxWidth="Infinity"
                   style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-padding: 15;" />

        <TextField fx:id="txtCodiceFiscale" promptText="codice fiscale" visible="false" managed="false" maxWidth="Infinity"
                   style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-padding: 15;" />

        <TextField fx:id="txtEmail" promptText="email" maxWidth="Infinity"
                   style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-padding: 15;" />

        <PasswordField fx:id="txtPassword" promptText="password" maxWidth="Infinity"
                       style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-padding: 15;" />

    </VBox>

    <Button fx:id="btnConferma" text="CONFERMA" defaultButton="true"
            style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold; -fx-background-radius: 50; -fx-padding: 20 80; "
            onAction="#handleConferma" />

    <Label fx:id="lblErrore" visible="false" managed="false"
           style="-fx-background-color: #FFD4A3; -fx-padding: 15; -fx-font-size: 16;"
           text="ATTENZIONE: email e/o password non corrette" />

</VBox>