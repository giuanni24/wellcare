<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="maindir.view.gui.PatientBookingSummaryGUIController">

    <VBox alignment="TOP_CENTER" prefHeight="700" prefWidth="1080" spacing="20"
          style="-fx-background-color: #C8D8E4;">

        <padding>
            <Insets top="30" left="30" right="30" />
        </padding>

        <HBox alignment="CENTER" spacing="20" prefWidth="1020">
            <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@home-icon.png" />
                    </ImageView>
                </graphic>
            </Button>

            <HBox HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="15">
                <Label text="WellCare Center" style="-fx-font-size: 50; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="50" />
                    </font>
                </Label>
                <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                    <Image url="@shield-icon.png" />
                </ImageView>
            </HBox>

            <HBox HBox.hgrow="ALWAYS" />

            <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@back-icon.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <VBox prefHeight="30" />

        <Label text="Riepilogo" textFill="BLACK">
            <font>
                <Font name="Serif Regular" size="48" />
            </font>
        </Label>

        <VBox prefHeight="20" />

        <VBox alignment="CENTER" maxWidth="700" style="-fx-border-color: #555; -fx-border-width: 1px;">
            <GridPane hgap="1" vgap="1" style="-fx-background-color: #999;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FFD4A3; -fx-padding: 0 0 0 20;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="SERVIZIO" style="-fx-font-weight: bold; -fx-font-size: 20;" />
                </HBox>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 0 0 0 20;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label fx:id="lblServizio" text="Nome Servizio" style="-fx-font-size: 20;" />
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FFD4A3; -fx-padding: 0 0 0 20;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="DOTTORE" style="-fx-font-weight: bold; -fx-font-size: 20;" />
                </HBox>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 0 0 0 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label fx:id="lblDottore" text="Nome Dottore" style="-fx-font-size: 20;" />
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FFD4A3; -fx-padding: 0 0 0 20;" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="COSTO" style="-fx-font-weight: bold; -fx-font-size: 20;" />
                </HBox>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 0 0 0 20;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label fx:id="lblCosto" text="â‚¬ 0.00" style="-fx-font-size: 20;" />
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FFD4A3; -fx-padding: 0 0 0 20;" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="GIORNO" style="-fx-font-weight: bold; -fx-font-size: 20;" />
                </HBox>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 0 0 0 20;" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label fx:id="lblGiorno" text="DD/MM/YYYY" style="-fx-font-size: 20;" />
                </HBox>
            </GridPane>
        </VBox>

        <VBox prefHeight="20" />

        <HBox alignment="CENTER" spacing="200">
            <Button text="ANNULLA" onAction="#handleAnnulla" fx:id = "btnReject"
                    style="-fx-background-color: #5A8CAE; -fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 10 50; -fx-cursor: hand;" />

            <Button text="CONFERMA" fx:id = "btnConfirm" onAction="#handleConfermaDefinitiva" defaultButton = "true"
                    style="-fx-background-color: #FF8C42; -fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 10 50; -fx-cursor: hand;" />
        </HBox>

    </VBox>

    <VBox fx:id="popupConfirmation" visible="false" alignment="CENTER"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="CENTER" maxWidth="500" prefHeight="250" spacing="30"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #FF8C42; -fx-border-width: 3; -fx-border-radius: 20;">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Richiesta di prenotazione&#10;inviata con successo!" textAlignment="CENTER"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="440">
                <Button text="OK" onAction="#handleOkSuccess" fx:id="btnOk"
                        style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 40; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </VBox>

    <VBox fx:id="popupCancellation" visible="false" alignment="CENTER"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="CENTER" maxWidth="500" prefHeight="250" spacing="30"
              style="-fx-background-color: white; -fx-background-radius: 20;
                 -fx-border-color: #598bad; -fx-border-width: 3; -fx-border-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 6);">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Richiesta di prenotazione&#10;annullata con successo!"
                   textAlignment="CENTER"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="440">
                <Button text="OK" onAction="#handleOkCancellation"
                        style="-fx-background-color: #598bad; -fx-text-fill: white;
                           -fx-font-size: 20; -fx-font-weight: bold;
                           -fx-background-radius: 15; -fx-padding: 10 40;
                           -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </VBox>


</StackPane>