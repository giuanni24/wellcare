<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1080.0" spacing="20.0"
      style="-fx-background-color: #D6EAF8;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="maindir.view.gui.SecretaryRequestsListGUIController">

    <padding>
        <Insets top="30" left="30" right="30" />
    </padding>

    <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
        <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@home-icon.png" /></ImageView></graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="15.0">
            <Label text="WellCare Center" style="-fx-font-size: 48; -fx-font-weight: bold;" />
            <ImageView fitHeight="60.0" fitWidth="60.0"><Image url="@shield-icon.png" /></ImageView>
        </HBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@back-icon.png" /></ImageView></graphic>
        </Button>
    </HBox>

    <Label text="Gestisci Richieste">
        <font><Font name="Serif Regular" size="40.0" /></font>
    </Label>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxWidth="900.0" prefHeight="500.0"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <content>
            <VBox fx:id="requestsContainer" spacing="10.0"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
            </VBox>
        </content>
    </ScrollPane>

    <Label fx:id="lblMessage" visible="false" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
</VBox>