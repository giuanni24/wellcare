<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="maindir.view.gui.SecretaryManageRequestGUIController">

    <!-- ====== PARTE ESISTENTE: INVARIATA ====== -->
    <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1080.0" spacing="20.0"
          style="-fx-background-color: #D6EAF8;">

        <padding>
            <Insets top="30" left="30" right="30" />
        </padding>

        <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
            <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@home-icon.png" /></ImageView></graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="15.0">
                <Label text="WellCare Center" style="-fx-font-size: 48; -fx-font-weight: bold;" />
                <ImageView fitHeight="60.0" fitWidth="60.0"><Image url="@shield-icon.png" /></ImageView>
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogout" onAction="#handleBack" style="-fx-background-color: transparent;">
                <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@back-icon.png" /></ImageView></graphic>
            </Button>
        </HBox>

        <Label text="Gestisci Richieste">
            <font><Font name="Serif Regular" size="40.0" /></font>
        </Label>

        <HBox alignment="CENTER" spacing="40.0" prefHeight="500.0">

            <VBox alignment="TOP_CENTER" prefWidth="400.0" spacing="10.0"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                <Label text="Lista fatture non pagate" style="-fx-font-size: 20; -fx-font-family: Serif;"/>
                <ListView fx:id="listInvoices" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
            </VBox>

            <VBox alignment="CENTER" prefWidth="450.0" spacing="30.0"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30;">

                <Label fx:id="lblRequestInfo" wrapText="true" textAlignment="CENTER"
                       style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="350">
                    <ComboBox fx:id="cmbSlots" promptText="ORARIO" prefWidth="350.0" prefHeight="45.0"
                              style="-fx-background-color: #D3D3D3; -fx-font-size: 16; -fx-font-weight: bold;"/>
                </VBox>

                <Button text="CONFERMA" onAction="#handleConfirm" fx:id="btnConfirm"
                        style="-fx-background-color: #FF8C00; -fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 10 40; -fx-cursor: hand;" />

                <Button text="RIFIUTA RICHIESTA" onAction="#handleRejectClick" fx:id="btnReject"
                        style="-fx-background-color: #5D8AA8; -fx-text-fill: black; -fx-font-size: 18; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 10 30; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets top="30" />
                    </VBox.margin>
                </Button>
            </VBox>
        </HBox>

        <Label fx:id="lblMessage" visible="false" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    </VBox>

    <!-- ====== POPUP MOTIVO RIFIUTO: reso overlay sopra (modello) ====== -->
    <VBox fx:id="popupReject" alignment="CENTER" visible="false" managed="false"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="CENTER" maxWidth="500" prefHeight="320" spacing="25"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-border-color: #598bad; -fx-border-width: 3; -fx-border-radius: 20;">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="MOTIVI DEL RIFIUTO" textAlignment="CENTER"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <TextArea fx:id="txtRejectReason" promptText="Inserisci messaggio" wrapText="true"
                      prefHeight="160" style="-fx-font-size: 16;"/>

            <HBox alignment="BOTTOM_RIGHT" prefWidth="440" spacing="10">
                <Button text="ANNULLA" onAction="#closePopup"
                        style="-fx-background-color: #999999; -fx-text-fill: white;
                               -fx-font-size: 18; -fx-font-weight: bold;
                               -fx-background-radius: 15; -fx-padding: 10 25; -fx-cursor: hand;" />
                <Button text="CONFERMA" onAction="#confirmRejection"
                        style="-fx-background-color: #598bad; -fx-text-fill: white;
                               -fx-font-size: 18; -fx-font-weight: bold;
                               -fx-background-radius: 15; -fx-padding: 10 25; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </VBox>

    <!-- ====== POPUP SUCCESSO CONFERMA (modello arancione) ====== -->
    <VBox fx:id="popupConfirmation" visible="false" managed="false" alignment="CENTER"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="CENTER" maxWidth="500" prefHeight="250" spacing="30"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-border-color: #FF8C42; -fx-border-width: 3; -fx-border-radius: 20;">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Richiesta approvata&#10;con successo!"
                   textAlignment="CENTER"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="440">
                <Button text="OK" onAction="#handleOkSuccess"
                        style="-fx-background-color: #FF8C42; -fx-text-fill: white;
                               -fx-font-size: 20; -fx-font-weight: bold;
                               -fx-background-radius: 15; -fx-padding: 10 40; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </VBox>

    <!-- ====== POPUP SUCCESSO RIFIUTO (modello blu #598bad) ====== -->
    <VBox fx:id="popupCancellation" visible="false" managed="false" alignment="CENTER"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="CENTER" maxWidth="500" prefHeight="250" spacing="30"
              style="-fx-background-color: white; -fx-background-radius: 20;
                     -fx-border-color: #598bad; -fx-border-width: 3; -fx-border-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 6);">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Richiesta rifiutata&#10;con successo!"
                   textAlignment="CENTER"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="440">
                <Button text="OK" onAction="#handleOkCancellation"
                        style="-fx-background-color: #598bad; -fx-text-fill: white;
                               -fx-font-size: 20; -fx-font-weight: bold;
                               -fx-background-radius: 15; -fx-padding: 10 40; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </VBox>

</StackPane>
