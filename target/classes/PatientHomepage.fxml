<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="maindir.view.gui.HomepagePatientGUIController"
           prefHeight="750.0" prefWidth="1080.0">

    <!-- Schermata principale (sfondo) -->
    <VBox alignment="TOP_CENTER" spacing="40" style="-fx-background-color: #C8D8E4;">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30" />
        </padding>

        <!-- Header con logo, titolo e logout -->
        <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="15.0">
                <Label text="WellCare Center" textFill="BLACK">
                    <font><Font name="System Bold" size="48.0" /></font>
                </Label>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@shield-icon.png" /></image>
                </ImageView>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnLogout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@logout-icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <Region prefHeight="20.0" />

        <!-- Titolo scegliere un'azione -->
        <Label text="Scegliere un'azione" alignment="CENTER" prefWidth="400.0" prefHeight="50.0"
               style="-fx-background-color: #B0BEC5; -fx-background-radius: 5; -fx-text-fill: black;">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Bottoni azione -->
        <HBox alignment="CENTER" spacing="40.0">
            <Button fx:id="btnPrenotaVisita" text="PRENOTA&#10;VISITA" textAlignment="CENTER"
                    onAction="#handlePrenotaVisita"
                    prefWidth="350.0" prefHeight="180.0"
                    style="-fx-background-color: #FF8C42; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 7); -fx-cursor: hand;" />

            <Button fx:id="btnVisualizzaPrenotazioni" text="VISUALIZZA&#10;PRENOTAZIONI" textAlignment="CENTER"
                    onAction="#handleVisualizzaPrenotazioni"
                    prefWidth="350.0" prefHeight="180.0"
                    style="-fx-background-color: #FF8C42; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 7); -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- Popup notifiche (sovrapposto, nascosto di default) -->
    <VBox fx:id="popupNotifiche" visible="false" managed="false" alignment="CENTER"
          style="-fx-background-color: rgba(0, 0, 0, 0.5);">

        <VBox alignment="TOP_CENTER" prefWidth="760" maxWidth="760" spacing="30"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 20, 0, 0, 0);">

            <!-- ScrollPane per le notifiche -->
            <ScrollPane fx:id="scrollNotifiche" fitToWidth="true" prefHeight="400" maxHeight="400"
                        style="-fx-background-color: white; -fx-border-color: transparent; -fx-background: white;">
                <VBox fx:id="notificationContainer" spacing="20" style="-fx-padding: 10;">
                    <!-- Le notifiche verranno aggiunte dinamicamente qui -->
                </VBox>
            </ScrollPane>

            <!-- Pulsante OK -->
            <Button fx:id="btnOk" text="OK" onAction="#handleOk"
                    style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-size: 32; -fx-font-weight: bold; -fx-background-radius: 50; -fx-padding: 15 60; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="32" />
                </font>
            </Button>

        </VBox>

    </VBox>

</StackPane>
