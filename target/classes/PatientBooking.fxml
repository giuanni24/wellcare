<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700" prefWidth="1080" spacing="20"
      style="-fx-background-color: #C8D8E4;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="maindir.view.gui.PatientBookingGUIController">

    <padding>
        <Insets top="30" left="30" right="30" />
    </padding>

    <HBox alignment="CENTER" spacing="20" prefWidth="1020">
        <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                    <Image url="@home-icon.png" />
                </ImageView>
            </graphic>
        </Button>

        <HBox HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="15">
            <Label text="WellCare Center" style="-fx-font-size: 50; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="50" />
                </font>
            </Label>
            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <Image url="@shield-icon.png" />
            </ImageView>
        </HBox>

        <HBox HBox.hgrow="ALWAYS" />

        <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                    <Image url="@back-icon.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <VBox prefHeight="30" />

    <Label text="Prenotazione Visita" textFill="BLACK">
        <font>
            <Font name="Serif Regular" size="48" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="600" spacing="25"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <padding>
            <Insets top="40" bottom="40" left="50" right="50" />
        </padding>

        <StackPane alignment="CENTER_LEFT">
            <ComboBox fx:id="cmbService" promptText="VISITA" prefWidth="500" prefHeight="50"
                      style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-font-weight: bold; -fx-background-radius: 0;" />
        </StackPane>

        <StackPane alignment="CENTER_LEFT">
            <ComboBox fx:id="cmbDoctor" promptText="DOTTORE" prefWidth="500" prefHeight="50" disable="true"
                      style="-fx-background-color: #D3D3D3; -fx-font-size: 18; -fx-font-weight: bold; -fx-background-radius: 0;" />
        </StackPane>

        <HBox alignment="CENTER_LEFT" spacing="0" style="-fx-background-color: #D3D3D3;">
            <DatePicker fx:id="datePicker" promptText="CALENDARIO" prefWidth="500" prefHeight="50" disable="true"
                        style="-fx-font-size: 18; -fx-font-weight: bold; -fx-background-color: transparent;"/>
        </HBox>

        <HBox alignment="CENTER_RIGHT" prefWidth="500">
            <Button fx:id="btnConferma" text="CONFERMA" onAction="#handleConferma"
                    style="-fx-background-color: #FF8C42; -fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 10 40; -fx-cursor: hand;" />
        </HBox>

    </VBox>

    <Label fx:id="lblMessage" visible="false" style="-fx-font-size: 16;" />

</VBox>