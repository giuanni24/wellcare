<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="maindir.view.gui.PatientProfileGUIController">

    <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1080.0" spacing="20.0"
          style="-fx-background-color: #C8D8E4;">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
            <Button fx:id="btnHome" mnemonicParsing="false" onAction="#handleHome"
                    style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@home-icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="15.0">
                <Label text="WellCare Center" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@shield-icon.png" />
                    </image>
                </ImageView>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@back-icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <Label text="Le tue Prenotazioni">
            <font>
                <Font name="System Regular" size="36.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxWidth="900.0" prefHeight="500.0"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="appointmentsContainer" spacing="0.0"
                      style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                </VBox>
            </content>
        </ScrollPane>

        <Label fx:id="lblMessage" visible="false">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

    </VBox>

    <VBox fx:id="popupCancellation" alignment="CENTER" maxHeight="300.0" maxWidth="500.0" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 20, 0, 0, 0); -fx-border-color: #E57373; -fx-border-width: 3; -fx-border-radius: 20;"
          visible="false">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label text="ATTENZIONE" textFill="#d32f2f">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="Sei sicuro di voler annullare questa prenotazione?" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <Label text="Questa operazione non può essere annullata." textFill="#757575">
            <font>
                <Font name="System Italic" size="14.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="30.0">
            <Button text="NO, INDIETRO" onAction="#closePopup"
                    style="-fx-background-color: #B0BEC5; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand;" />

            <Button text="SÌ, ANNULLA" onAction="#confirmCancellation"
                    style="-fx-background-color: #E57373; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand;" />
        </HBox>
    </VBox>

</StackPane>