<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1080.0" spacing="20.0"
      style="-fx-background-color: #D6EAF8;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="maindir.view.gui.SecretaryAcceptPatientGUIController">

    <padding>
        <Insets top="30" left="30" right="30" />
    </padding>

    <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
        <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@home-icon.png" /></ImageView></graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="15.0">
            <Label text="WellCare Center" style="-fx-font-size: 48; -fx-font-weight: bold;" />
            <ImageView fitHeight="60.0" fitWidth="60.0"><Image url="@shield-icon.png" /></ImageView>
        </HBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleBack" fx:id = "btnBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@back-icon.png" /></ImageView></graphic>
        </Button>
    </HBox>

    <Label text="Accettazione Paziente">
        <font><Font name="Serif Regular" size="40.0" /></font>
    </Label>

    <VBox alignment="CENTER" spacing="10.0" maxWidth="500.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <TextField fx:id="txtFiscalCode" promptText="CODICE FISCALE" onAction="#handleSearch"
                   style="-fx-background-color: #D3D3D3; -fx-pref-height: 50; -fx-font-size: 18; -fx-font-weight: bold; -fx-background-radius: 5;" />
        <Button text="CERCA APPUNTAMENTI" fx:id = "btnSearch" onAction="#handleSearch"
                style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 20; -fx-padding: 10 30; -fx-cursor: hand;" />
    </VBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxWidth="900.0" prefHeight="350.0"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <content>
            <VBox fx:id="appointmentsContainer" spacing="10.0"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                <Label text="Inserisci un Codice Fiscale per visualizzare gli appuntamenti di oggi." textFill="GRAY" />
            </VBox>
        </content>
    </ScrollPane>

    <Label fx:id="lblStatus" visible="false" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

</VBox>