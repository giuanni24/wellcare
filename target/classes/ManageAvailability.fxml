<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="maindir.view.gui.ManageAvailabilityGUIController">

    <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1080.0" spacing="30.0" style="-fx-background-color: #D6EAF8;">
        <padding><Insets top="30" left="30" right="30" /></padding>

        <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
            <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@home-icon.png" /></ImageView></graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="WellCare Center" style="-fx-font-size: 48; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" fx:id="btnLogout" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic><ImageView fitHeight="50.0" fitWidth="50.0"><Image url="@logout-icon.png" /></ImageView></graphic>
            </Button>
        </HBox>

        <Label text="Gestione Indisponibilità">
            <font><Font name="System Bold" size="32.0" /></font>
        </Label>

        <VBox alignment="CENTER" spacing="25.0" maxWidth="600.0"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

            <VBox spacing="10.0">
                <Label text="Data Inizio:" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                <DatePicker fx:id="dpStart" prefHeight="50.0" prefWidth="500.0" />
            </VBox>

            <VBox spacing="10.0">
                <Label text="Data Fine:" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                <DatePicker fx:id="dpEnd" prefHeight="50.0" prefWidth="500.0" />
            </VBox>

            <Button fx:id="btnSubmit" text="VERIFICA DISPONIBILITÀ" onAction="#handleCheckAvailability"
                    prefWidth="300.0" prefHeight="60.0"
                    style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-background-radius: 30; -fx-cursor: hand;" />
        </VBox>

        <Label fx:id="lblStatus" visible="false" style="-fx-font-size: 16; -fx-font-weight: bold;" />
    </VBox>

    <VBox fx:id="popupConfirm" alignment="CENTER" visible="false" style="-fx-background-color: rgba(0,0,0,0.6);">
        <VBox alignment="CENTER" spacing="30.0" maxWidth="600.0"
              style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 40;">

            <ImageView fitHeight="80.0" fitWidth="80.0"><Image url="@shield-icon.png" /></ImageView>

            <Label text="ATTENZIONE" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #E67E22;" />

            <Label fx:id="lblAffectedCount" textAlignment="CENTER" wrapText="true"
                   style="-fx-font-size: 18; -fx-font-weight: bold;" />

            <Label text="Procedendo, questi appuntamenti verranno annullati o riprogrammati. Confermi l'indisponibilità?"
                   textAlignment="CENTER" wrapText="true" style="-fx-font-size: 16;" />

            <HBox spacing="20.0" alignment="CENTER">
                <Button text="ANNULLA" onAction="#closePopup" prefWidth="150.0"
                        style="-fx-background-color: #BDC3C7; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;" />
                <Button text="CONFERMA" onAction="#confirmIndisponibilita" prefWidth="150.0"
                        style="-fx-background-color: #FF8C42; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>