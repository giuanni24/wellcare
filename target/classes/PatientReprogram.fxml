<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1080.0" spacing="20.0"
      style="-fx-background-color: #D6EAF8;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="maindir.view.gui.PatientReprogramGUIController">

    <padding>
        <Insets top="30" left="30" right="30" />
    </padding>

    <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0">
        <Button fx:id="btnHome" onAction="#handleHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@home-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="15.0">
            <Label text="WellCare Center" textFill="BLACK">
                <font>
                    <Font name="System Bold" size="48.0" />
                </font>
            </Label>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@shield-icon.png" />
                </image>
            </ImageView>
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@back-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <Label text="Riprogramma" textFill="BLACK">
        <font>
            <Font name="Serif Regular" size="48.0" />
        </font>
        <VBox.margin>
            <Insets top="20.0" bottom="20.0" />
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER" maxWidth="500.0" spacing="30.0"
          style="-fx-background-color: white; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <padding>
            <Insets top="50.0" bottom="50.0" left="50.0" right="50.0" />
        </padding>

        <DatePicker fx:id="datePicker" promptText="CALENDARIO" editable="false" prefWidth="400.0" prefHeight="55.0"
                    style="-fx-font-size: 18px; -fx-background-color: #D3D3D3; -fx-control-inner-background: #D3D3D3; -fx-font-weight: bold;"/>

        <ComboBox fx:id="cmbHour" promptText="ORARIO" prefWidth="400.0" prefHeight="55.0" disable="true"
                  style="-fx-background-color: #D3D3D3; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 3;" />

        <Button fx:id="btnConferma" text="CONFERMA" onAction="#handleConferma"
                style="-fx-background-color: #FF8C00; -fx-text-fill: black; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 10 40;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>

    </VBox>

    <Label fx:id="lblMessage" visible="false">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

</VBox>